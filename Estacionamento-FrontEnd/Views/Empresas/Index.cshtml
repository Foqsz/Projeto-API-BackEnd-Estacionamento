 @model IEnumerable<Estacionamento_FrontEnd.Estacionamento.Core.Models.EmpresaViewModel>

@{
    ViewData["Title"] = "Gerenciar Empresas";
}
<h1>@ViewData["Title"]</h1>

@*<h2>Products</h2>*@
<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="CreateEmpresa" class="btn btn-primary">
                    <span title="Create New" class="fas fa-plus"></span> New Product
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CNPJ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.qVagasMotos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.qVagasCarros)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.qVagasMotos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.qVagasCarros)
                    </td>
                    <td>
                        <a asp-action="UpdateEmpresa" asp-route-id="@item.Id" title="Editar" class="btn btn-warning btn-sm">
                            <span class="fas fa-edit"></span> Editar
                        </a>
                        <a asp-action="DeletarEmpresa" asp-route-id="@item.Id" title="Deletar" class="btn btn-danger btn-sm">
                            <span class="fas fa-trash-alt"></span> Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>