@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Estacionamento_FrontEnd.Estacionamento.Core.Models.VeiculosViewModel

@{
    ViewData["Title"] = "Cadastrar Veiculo";
}

<h2>Cadastrar Veiculo</h2>

<form asp-action="CreateVeiculo" method="post" class="form-horizontal">
    @Html.AntiForgeryToken() <!-- Token anti-forgery para proteção -->

    <div class="form-group">
        <label asp-for="Marca" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Modelo" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Cor" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Cor" class="form-control" />
            <span asp-validation-for="Cor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Placa" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Placa" class="form-control" />
            <span asp-validation-for="Placa" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Tipo" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Tipo" class="form-control" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}